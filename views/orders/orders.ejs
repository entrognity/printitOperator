<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Process</title>
    <link rel="stylesheet" href="/css/ordersStyles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>Order Processing</h1>
    <input id="orderID" placeholder="Enter order ID" />
    <table id="ordersTable">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Service</th>
                <th>Total Pages</th>
                <th>Files</th>
                <th>Note</th>
                <th>Call Before print</th>
                <th>Received Amount / Total Amount </th>
                <th>Process</th>
                <th>Done</th>
                <th>Cancel</th>
            </tr>
        </thead>
        <tbody>
            <% allOrders.forEach(order => { %>
                <tr>
                    <td><%= order.orderID %></td>
                    <td><%= order.serviceName %></td>
                    <td><%= order.pages %></td>
                    <td><%= order.filesUri %></td>
                    <td><%= order.note %></td>
                    <td><%= order.callBeforePrint %></td>
                    <td><%= order.orderAmount/2 %> / <%= order.orderAmount %> </td>
                    <td><button class="process-btn" onclick="processOrder('<%= order.OrderId %>')">Process</button></td>
                    <td><button class="done-btn" onclick="markDone('<%= order.OrderId %>')">Done</button></td>
                    <td><button class="cancel-btn" onclick="cancelOrder('<%= order.OrderId %>')">Cancel</button></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    
    <script src="/scripts/ordersScript.js"></script>
</body>
</html>
