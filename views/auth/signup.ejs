<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="/css/authStyles.css">
    <!-- Bootstrap CSS for modal -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="main-content-signup">
        <form id="signupForm">
            <!-- Operator Details -->
            <div class="operatorDetDiv">
                <h2>Operator Details</h2>

                <!-- Full Name -->
                <label for="fullName">Full Name *</label>
                <small id="fullNameError" style="color:red;"></small>
                <input type="text" id="fullName" name="fullName" minlength="5" required>

                <!-- Email -->
                <label for="email">Email *</label>
                <input type="email" id="email" name="email" required>

                <!-- Password -->
                <label for="password">Password *</label>
                <input type="password" id="password" name="password" required>

                <!-- Confirm Password -->
                <label for="confirmPassword">Confirm Password *</label>
                <small id="passwordError" style="color:red;"></small>
                <input type="password" id="confirmPassword" name="confirmPassword" required>

                <!-- Phone Number 1 -->
                <label for="phoneNumber1">Phone Number 1 *</label>
                <input type="tel" id="phoneNumber1" name="phoneNumber1" pattern="[0-9]{10}" required>

                <!-- Phone Number 2 -->
                <label for="phoneNumber2">Phone Number 2 *</label>
                <input type="tel" id="phoneNumber2" name="phoneNumber2" pattern="[0-9]{10}" required>
            </div>

            <!-- Shop Details -->
            <div class="shopDetDiv">
                <h2>Shop Details</h2>

                <!-- Shop Name -->
                <label for="shopName">Shop Name *</label>
                <small id="shopNameError" style="color:red;"></small>
                <input type="text" id="shopName" name="shopName" minlength="5" required>
                
                <!-- Address Line 1 -->
                <label for="street1">Address Street 1 *</label>
                <input type="text" id="street1" name="street1" required>

                <!-- Address Line 2 -->
                <label for="street2">Address Street 2</label>
                <input type="text" id="street2" name="street2">

                <!-- Landmark -->
                <label for="landmark">Landmark</label>
                <input type="text" id="landmark" name="landmark">

                <!-- City -->
                <label for="city">City *</label>
                <input type="text" id="city" name="city" required>

                <!-- State -->
                <label for="state">State *</label>
                <input type="text" id="state" name="state" required>

                <!-- Pincode -->
                <label for="pincode">Pincode *</label>
                <input type="text" id="pincode" name="pincode" pattern="[0-9]{6}" required>

               <!-- Google Map Location URL -->
                <label for="gmapUrl">Google Map Location URL * <small>(click the Get My Location button)</small></label>
                <input type="url" id="gmapUrl" name="gmapUrl" placeholder="https://maps.google.com/" readonly required>

                <!-- Button to trigger location retrieval -->
                 <button class="getLocBtn" id="getLocationBtn">Get My Location</button>
                <!-- Loading status element -->
                <span id="loadingMessage" style="display: none; color: blue;">Getting your location...</span>
            </div>

            <!-- Submit Button -->
            <button type="submit">Sign Up</button>
        </form>
    </div>

    <!-- Bootstrap Modal for Success Message -->
    <div class="modal fade" id="signupSuccessModal" tabindex="-1" aria-labelledby="signupSuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="signupSuccessModalLabel">Signup Successful</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    You have signed up successfully. Please Verify the Email that is sent on the registered Email address.
                    <br>
                    Thank You.
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/auth/signupScript.js"></script>
</body>

</html>
